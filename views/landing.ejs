<% include partials/header %>
<div class="container">
    <div class="h3">
        GroupChatApp
    </div>
    <form onsubmit="add_comment()">
        <div class="form-group">
            <label for="user_name">Username</label>
            <input type="user_name" class="form-control" id="username" placeholder="Enter user_name"/>
        </div>
        <div class="form-group">
            <label for="chats">Chat</label>
            <textarea class="form-control" rows="10" id="chats"></textarea>
        </div>
        <div class="form-group">
            <label for="add_comment">Add Comment</label>
            <input  class="form-control" id="add_comment"/>
        </div>
        <%# <button type="submit" class="btn btn-primary" id="add">AddComment</button> %>
    </form>
    <button type="submit" class="btn btn-primary" id="add" onclick="add_comment()">AddComment</button>
</div>


